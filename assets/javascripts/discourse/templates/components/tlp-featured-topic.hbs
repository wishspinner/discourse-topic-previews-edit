{{preview-unbound topic.thumbnails opts=(hash featured=true)}}
<div class="featured-details">
  <div class="content">
    <div class="title">
      {{topic.title}}
    </div>
    {{#if siteSettings.topic_list_featured_excerpt}}
      <div class="excerpt">
        {{{topic.excerpt}}}
      </div>
    {{/if}}
    <span class="user">
      {{topic.topic_post_user.username}}
      {{avatar topic.topic_post_user imageSize="small"}}
    </span>
  </div>
</div>
